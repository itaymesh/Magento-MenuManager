        </reference>
        <reference name="content">
            <block type="ipmenumanager/adminhtml_menu" name="menus" />
        </reference>
    </ipmenumanager_admin_adminhtml_menu_index>

    <ipmenumanager_admin_adminhtml_menu_edit>
        <update handle="ipmenumanager_default" />
