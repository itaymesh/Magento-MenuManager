            <block type="ipmenumanager/adminhtml_menuitem" name="item" />
        </reference>
    </ipmenumanager_admin_adminhtml_menuitem_index>

    <ipmenumanager_admin_adminhtml_menuitem_edit>
        <update handle="ipmenumanager_default" />
        <reference name="left">
            <block type="ipmenumanager/adminhtml_menuitem_edit_tabs" name="items.tabs" />
        </reference>
        <reference name="content">
            <block type="ipmenumanager/adminhtml_menuitem_edit" name="items" />
        </reference>
